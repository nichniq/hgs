<main id="sculpture">
  <header>
    <h2>{{ title }}</h2>
    <p>{{ period }}</p>
    {{# captioning }}
    <p>{{ . }}</p>
    {{/ captioning }}
  </header>

  <nav>
    <ul class="thumbnails undecorated">
      {{# videos }}
      <li>
        <img src="{{{ thumbnail }}}" alt="" />
      </li>
      {{/ videos }}
      {{# images }}
      <li>
        <img src="{{{ source }}}" alt="" />
      </li>
      {{/ images }}
    </ul>
  </nav>

  <section>
    {{# videos }}
    <video src="{{{ source }}}" controls></video>
    {{/ videos }}
    {{# images }}
    <img src="{{{ source }}}" alt="" />
    {{/ images }}
  </section>
</main>
